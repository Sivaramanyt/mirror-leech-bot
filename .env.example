# ============================================
# MIRROR LEECH BOT - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your actual values
# Remove all comments and examples before deployment

# ============================================
# üî¥ REQUIRED VARIABLES (MUST BE SET)
# ============================================

# Get from @BotFather on Telegram
BOT_TOKEN=1234567890:ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghi

# Your Telegram User ID (not username) - Get from @userinfobot
OWNER_ID=123456789

# Get from https://my.telegram.org
TELEGRAM_API=1234567
TELEGRAM_HASH=abcdef1234567890abcdef1234567890

# MongoDB Atlas connection string
DATABASE_URL=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/

# ============================================
# ‚öôÔ∏è KOYEB DEPLOYMENT SETTINGS
# ============================================

# Port for health check (required for Koyeb)
PORT=8000

# ============================================
# üîµ OPTIONAL VARIABLES
# ============================================

# Google Drive Configuration
GDRIVE_ID=your_google_drive_folder_id_here
IS_TEAM_DRIVE=False
USE_SERVICE_ACCOUNTS=False
INDEX_URL=https://your-index-url.workers.dev/0:
STOP_DUPLICATE=False

# Authorization Settings (space-separated IDs)
AUTHORIZED_CHATS=chat_id1 chat_id2 chat_id3
SUDO_USERS=user_id1 user_id2 user_id3

# Upload Settings
DEFAULT_UPLOAD=tg
LEECH_DUMP_CHAT=@your_channel_username
LEECH_SPLIT_SIZE=2147483648
AS_DOCUMENT=False
EQUAL_SPLITS=False
MEDIA_GROUP=False
LEECH_FILENAME_PREFIX=

# File Management
MAX_FILE_SIZE=2147483648
EXCLUDED_EXTENSIONS=.exe .msi .bat .scr

# Queue System (concurrent downloads/uploads)
QUEUE_ALL=8
QUEUE_DOWNLOAD=4
QUEUE_UPLOAD=4

# Status & Monitoring
STATUS_UPDATE_INTERVAL=10
STATUS_LIMIT=4
INCOMPLETE_TASK_NOTIFIER=False

# Bot Customization
CMD_SUFFIX=
THUMBNAIL_LAYOUT=2x2

# ============================================
# üü° ADVANCED SETTINGS (OPTIONAL)
# ============================================

# User Session (for premium features)
USER_SESSION_STRING=

# Torrent Settings
TORRENT_TIMEOUT=600
BASE_URL=http://your-domain.com
BASE_URL_PORT=80
WEB_PINCODE=False

# RSS Settings
RSS_DELAY=600
RSS_SIZE_LIMIT=0
RSS_CHAT=@your_rss_channel

# API Keys (if you have them)
FILELION_API=your_filelion_api_key
STREAMWISH_API=your_streamwish_api_key
SEARCH_API_LINK=https://your-search-api.herokuapp.com/
SEARCH_LIMIT=20

# YT-DLP Options (JSON format)
YT_DLP_OPTIONS={"format": "best[height<=720]/best", "writesubtitles": false}

# Rclone Settings
RCLONE_PATH=remote:path
RCLONE_FLAGS=--checksum --drive-chunk-size=64M
RCLONE_SERVE_URL=http://your-domain.com
RCLONE_SERVE_PORT=8080
RCLONE_SERVE_USER=username
RCLONE_SERVE_PASS=password

# Update Settings
UPSTREAM_REPO=https://github.com/yourusername/mirror-leech-bot
UPSTREAM_BRANCH=main

# FFmpeg Commands (JSON format)
FFMPEG_CMDS={"compress": ["-c:v libx264 -crf 28 -preset medium"]}

# Name Substitution (regex patterns)
NAME_SUBSTITUTE=script/code/s | mirror/leech | clone

# JDownloader Settings
JD_EMAIL=your_jdownloader_email@gmail.com
JD_PASS=your_jdownloader_password

# Network Settings (if behind proxy)
TG_PROXY={"scheme": "socks5", "hostname": "127.0.0.1", "port": 1080}

# ============================================
# üîß DEVELOPMENT SETTINGS
# ============================================

# Development mode
DEBUG=False

# Logging level (INFO, DEBUG, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================
# üìù USAGE EXAMPLES
# ============================================

# BASIC SETUP (minimum required):
# BOT_TOKEN=1234567890:ABCDEFghijklmnop
# OWNER_ID=123456789
# TELEGRAM_API=1234567
# TELEGRAM_HASH=abc123def456
# DATABASE_URL=mongodb+srv://user:pass@cluster0.mongodb.net/
# PORT=8000

# WITH GOOGLE DRIVE:
# GDRIVE_ID=1A2B3C4D5E6F7G8H9I0J
# IS_TEAM_DRIVE=False

# WITH CHANNEL UPLOAD:
# LEECH_DUMP_CHAT=-1001234567890

# WITH USER AUTHORIZATION:
# AUTHORIZED_CHATS=-1001111111 -1002222222
# SUDO_USERS=123456789 987654321

# ============================================
# üö® SECURITY NOTES
# ============================================

# 1. Never commit .env file to public repositories
# 2. Keep your tokens and credentials secure
# 3. Use strong passwords for database
# 4. Limit authorized users/chats
# 5. Enable 2FA for all linked accounts
# 6. Regularly rotate API keys and tokens

